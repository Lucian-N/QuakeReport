<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/quakeMag"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:padding="16dp"
        tools:text="@string/placeholderMag" />

    <LinearLayout
        android:id="@+id/quakeContainer"
        android:layout_width="fill_parent"
        android:layout_height="88dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/quakeLocation"
            android:layout_width="fill_parent"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:width="0dp"
            android:gravity="left"
            android:padding="16dp"
            tools:text="@string/placeholderLocation" />

        <TextView
            android:id="@+id/quakeDate"
            android:layout_width="fill_parent"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:width="0dp"
            android:gravity="right"
            android:padding="16dp"

            tools:text="@string/placeholderDate" />
    </LinearLayout>

</LinearLayout>

